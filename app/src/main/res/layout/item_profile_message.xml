<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileAvatarView"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="ProfilePhoto"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/profileViewFirstName"
                        android:layout_width="wrap_content"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_width="8sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"/>
                <TextView
                        android:id="@+id/profileViewSurname"
                        android:layout_width="wrap_content"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:text="День рождения:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileViewBirthdayText"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/profileViewBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>
        <TextView
                android:text="Город:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileViewCityText"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/profileViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"/>

</LinearLayout>